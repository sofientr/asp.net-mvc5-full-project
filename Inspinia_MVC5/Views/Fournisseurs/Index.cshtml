@model IEnumerable<Inspinia_MVC5.Models.Fournisseur>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Liste des Fournisseurs</h5>
    					<div class="ibox-tools">
    						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
    					</div>
                    </div>
                    <div class="ibox-content">


                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NOM)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ADRESSE)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TEL)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FAX)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EMAIL)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RC)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MF)
                                    </th>
                                    <th></th>
                                </tr>
                                </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NOM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ADRESSE)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TEL)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FAX)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EMAIL)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MF)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.FRSID }, new { @class = "btn btn-primary btn-sm" })
                                            @Html.ActionLink("Edit", "Edit", new { id = item.FRSID }, new { @class = "btn btn-white btn-sm" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.FRSID }, new { @class = "btn btn-white btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
     </div>
    
    
    
</body>
</html>
