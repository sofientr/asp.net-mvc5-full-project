@model IEnumerable<Inspinia_MVC5.Models.Unite>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Liste des Unites</h5>
    					<div class="ibox-tools">
    						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
    					</div>
                    </div>
                    <div class="ibox-content">


                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Unite
                                    </th>
                                    <th></th>
                                </tr>
                                </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Valeur_Unite)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.Valeur_Unite }, new { @class = "btn btn-primary btn-sm" })
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Valeur_Unite }, new { @class = "btn btn-white btn-sm" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Valeur_Unite }, new { @class = "btn btn-white btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
     </div>
    

    @section Styles {
        @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    }
    @section Scripts {
        @Scripts.Render("~/plugins/dataTables")
        <script type="text/javascript">
            $(document).ready(function () {

                $('.dataTables-example').DataTable({
                    pageLength: 25,
                    dom: '<"html5buttons"B>lTfgitp',
                    buttons: [
                        { extend: 'copy' },
                        { extend: 'csv', title: 'liste des fournisseurs' },
                        { extend: 'excel', title: 'liste des fournisseurs' },
                        { extend: 'pdf', title: 'liste des fournisseurs' },

                        {
                            extend: 'print',
                            customize: function (win) {
                                $(win.document.body).addClass('white-bg');
                                $(win.document.body).css('font-size', '10px');

                                $(win.document.body).find('table')
                                        .addClass('compact')
                                        .css('font-size', 'inherit');
                            }
                        }
                    ]

                });



            });

        </script>
    }



    
</body>
</html>
