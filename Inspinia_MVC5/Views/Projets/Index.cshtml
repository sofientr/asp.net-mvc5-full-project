                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TYPE)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DEBUT)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FIN)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MONTANT_HT)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Budget)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SociID)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Tiers.TiersID)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CODE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NOM_PROJET)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TYPE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DEBUT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FIN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MONTANT_HT)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Budget)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SociID)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tiers.TiersID)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.PrID }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Edit", "Edit", new { id = item.PrID }, new { @class = "btn btn-white btn-xs" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.PrID }, new { @class = "btn btn-white btn-xs" })
                                    </td>
                                </tr>
                            }

