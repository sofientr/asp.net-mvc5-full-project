@model Inspinia_MVC5.Models.Societes
@{
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
@{ HttpContext.Current.Session.Abandon();
    Session.Abandon(); // Does nothing
    Session.Clear();   // Removes the data contained in the session
    Session["ID"] = "";
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    <div class="middle-box text-center loginscreen  animated fadeInDown">
        
            

                @*<h1 class="logo-name">SUNEVIT</h1>*@

                <div class="login-word">
                    <span class="second-word">SUN</span><span class="first-word">VIT</span>
                </div>
                <div class="middle-box text-center lockscreen animated fadeInDown">
                    <div>
                        <div class="m-b-md">
                            <img alt="image" class="img-circle circle-border" src="~/Images/LOGOIN.jpg">
                        </div>

                    </div>
                </div>

           
</div>

            <div class="passwordBox animated fadeInDown">
                <div class="row">

                    <div class="col-md-12">
                        <div class="ibox-content">

                            <h2 class="font-bold">Mot de passe oublié</h2>

                            <p>
                                Entrez votre adresse E-mail. Votre mot de passe sera réinitialisé et envoyé par courrier électronique
                            </p>

                            <div class="row">

                                <div class="col-lg-12">
                                    <form class="m-t" role="form" action="index.html">
                                        <div class="form-group">
                                            <input type="email" class="form-control" placeholder="Email address" required="">
                                        </div>

                                        <button type="submit" class="btn btn-primary block full-width m-b">Envoyer un nouveau mot de passe</button>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        Copyright SUNEVIT © 2018
                    </div>
                    <div class="col-md-6 text-right">
                        <small>© 2018-2019</small>
                    </div>
                </div>
            </div>

</body>

</html>


