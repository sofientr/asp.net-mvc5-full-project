@model Inspinia_MVC5.Models.Societes
@{
    Layout = null;
}
@{ HttpContext.Current.Session.Abandon();
    Session.Abandon(); // Does nothing
    Session.Clear();   // Removes the data contained in the session
    Session["ID"] = "";
    //if(ViewBag.ste!=null)
    //{
    //    Html.Action("Tour", "SocieteLogoes");
    //}
}
<!DOCTYPE html>
<html>
<head>
   
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>ELEMENTS | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <div class="login-word">
                    @*<span class="second-word">ELEMENTS</span>*@
                </div>
                <div class="middle-box text-center lockscreen animated fadeInDown">
                    <div>
                        <div class="m-b-md">
                            <img alt="image" class="img-responsive"*@ src="~/Images/logoElements.png">
                        </div>
                  
                    </div>
                </div>

            </div>

            <div class="col-md-pull-10">
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            @if (ViewBag.ste == null)
                            {
                                @Html.EditorFor(model => model.NOM, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", placeholder = "Nom" } })
                                @Html.ValidationMessageFor(model => model.NOM, "", new { @class = "text-danger" })
                            }
                            else
                            {
                                @Html.EditorFor(model => model.NOM, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom" } })
                                @Html.ValidationMessageFor(model => model.NOM, "", new { @class = "text-danger" })
                            }
                        </div>
                        <div class="form-group">
                            @if (ViewBag.ste == null)
                            {
                                @Html.EditorFor(model => model.CODE_ACCES, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", placeholder = "Mot de passe", @type = "password" } })
                                @Html.ValidationMessageFor(model => model.CODE_ACCES, "", new { @class = "text-danger" })

                            }
                            else
                            {
                                @Html.EditorFor(model => model.CODE_ACCES, new { htmlAttributes = new { @class = "form-control", placeholder = "Mot de passe", @type = "password" } })
                                @Html.ValidationMessageFor(model => model.CODE_ACCES, "", new { @class = "text-danger" })
                            }
                        </div>
                        <div class="form-group">
                            @if (ViewBag.ste == null)
                            {
                                <select class="form-control" name="soc" id="soc" disabled>


                                    @{
                                        Inspinia_MVC5.Models.MED_TRABELSI db = new Inspinia_MVC5.Models.MED_TRABELSI();
                                        List<Inspinia_MVC5.Models.SocieteLogo> SocieteLogo = db.SocieteLogo.ToList();
                                        foreach (var item in SocieteLogo)
                                        {
                                            <option>@item.Nom_Societe</option>
                                        }
                                    }

                                </select>
                            }
                            else
                            {
                                <select class="form-control" name="soc" id="soc" required>


                                    @{
                                        Inspinia_MVC5.Models.MED_TRABELSI db = new Inspinia_MVC5.Models.MED_TRABELSI();
                                        List<Inspinia_MVC5.Models.SocieteLogo> SocieteLogo = db.SocieteLogo.ToList();
                                        foreach (var item in SocieteLogo)
                                        {
                                            <option>@item.Nom_Societe</option>
                                        }
                                    }
                                </select>
                            }

                        </div>



                        <div class="form-group">
                            @if (ViewBag.ste == null)
                            {
                                @Html.Label("                             ", htmlAttributes: new { @class = "control-label col-md-1" })
                                <button type="submit" class="btn btn-primary block full-width m-b" disabled>Login</button>
                            }
                            else
                            {
                                @Html.Label("                             ", htmlAttributes: new { @class = "control-label col-md-1" })
                                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
                            }

                        </div>


                        if (ViewBag.ste == null)
                        {
                            <a class="btn btn-primary block full-width m-b" href="@Url.Action("Tour", "SocieteLogoes")">
                                Configuration d'une application

                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("ForgotPassword", "Societes")"><small>Mot de passe oublié?</small></a>
                            <p class="text-muted text-center"><small>Vous n'avez pas de compte?</small></p>
                            <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Inscriptions")">
                                Créer un compte

                            </a>
                        }
                        <p class="m-t"> <small>SUNEVIT &copy; 2018</small> </p>
                    }
                </div>
            </div>
        </div>
            </div>

</body>

</html>


