@model Inspinia_MVC5.Models.Societes

@{
    ViewBag.Title = "Edit";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Edit</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit Societes</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SociID)

        <div class="form-group">
            @Html.LabelFor(model => model.NOM, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOM)
                @Html.ValidationMessageFor(model => model.NOM)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CODE_ACCES, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CODE_ACCES)
                @Html.ValidationMessageFor(model => model.CODE_ACCES)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TiersID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TiersID)
                @Html.ValidationMessageFor(model => model.TiersID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CentreID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CentreID)
                @Html.ValidationMessageFor(model => model.CentreID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Capitale, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Capitale)
                @Html.ValidationMessageFor(model => model.Capitale)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}


