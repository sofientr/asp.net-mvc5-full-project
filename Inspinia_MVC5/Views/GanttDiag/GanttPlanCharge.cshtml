
@{
    ViewBag.Title = "GanttPlanCharge";
     
}

<h2>GanttPlanCharge</h2>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @*<script src="https://cdn.anychart.com/js/latest/data-adapter.min.js"></script>*@
    <script src="~/Scripts/dhtmlxgantt/dhtmlxgantt.js?v=20180227" type="text/javascript" charset="utf-8"></script>
    <link rel="stylesheet" href="~/Scripts/dhtmlxgantt/dhtmlxgantt.css?v=20180227">
    <style>

        html, body {
            height: 100%;
            padding: 0px;
            margin: 0px;
            overflow: hidden;
        }

        .gantt_task_line.gantt_project {
            color: white;
        }

        .gantt_side_content {
            color: #333;
        }

        .summary-bar {
            font-weight: bold;
        }

        .gantt_resource_task .gantt_task_content {
            color: inherit;
        }

        .gantt_resource_task .gantt_task_progress {
            background-color: rgba(33,33,33,0.3);
        }

        .gantt_cell:nth-child(1) .gantt_tree_content {
            border-radius: 16px;
            width: 100%;
            height: 80%;
            margin: 5% 0;
            line-height: 230%;
        }
    </style>


    <title>Index</title>
</head>
<body>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2>Create</h2>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("ProjetTechnique", "Index")
                </li>
                <li class="active">
                    <strong>Diagramme de Gantt</strong>
                </li>
            </ol>
        </div>
        <div class="col-sm-8">
            <div class="title-action">
                @Html.ActionLink("Retour aux projets technques", "projTech", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div id="ganttContainer" style='width:1200px; height:550px;'></div>


    <script src="~/Scripts/mainPlanChargeHeures.js" type="text/javascript" charset="utf-8"></script>

</body>
</html>
