@model Inspinia_MVC5.Models.Centres_couts


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>CC Centres_couts</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Libelle, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Libelle)
                                    @Html.ValidationMessageFor(model => model.Libelle)
                                </div>
                            </div>

                          

                            
                            
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="button" value="Create" class="btn btn-primary" onclick="update_Couts()" />
                                    @Html.ActionLink("Cancel", "Create", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function update_Couts() {
          debugger;
        $.ajax({
            type: 'POST',

            url: '/Decaissements/AddCouts?Libelle=' + Libelle.value,
            success: function (response) {

                $("#Libelle").val("");

                window.location.href = "Create";
            }
        });
 }
</script>

