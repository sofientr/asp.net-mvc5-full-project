@model IEnumerable<Inspinia_MVC5.Models.Personnels>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Personnel</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Liste des employés</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Ajouter un employé", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cout_hor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Cout_hor)
        </td>
        <td>
            @*@Html.ActionLink("Details", "Details", new { id = item.PersonnelId }, new { @class = "btn btn-primary btn-sm" })*@
            @Html.ActionLink("Modifier", "Edit", new { id = item.PersonnelId }, new { @class = "btn btn-white btn-sm" })
            @*@Html.ActionLink("Delete", "Delete", new { id = item.PersonnelId }, new { @class = "btn btn-white btn-sm" })*@
            @Html.ActionLink("Plan de charge", "GanttPlanCharge", new { id = item.PersonnelId }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Plan de charge Comparaison", "GanttPlanChargeComparaison", new { id = item.PersonnelId }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Calendrier", "PlanChargeCalendrier", new { id = item.PersonnelId }, new { @class = "btn btn-primary btn-sm" })

        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



