@model IEnumerable<Inspinia_MVC5.Models.LIGNES_DEVIS_FOURNISSEURS>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Devis Fournisseur</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="white-bg">
    <div class="wrapper wrapper-content p-xl">
        <div class="ibox-content p-xl">
            <div class="row">
                <div class="col-sm-6">
                    <h5>From:</h5>
                    <address>
                        <strong>@ViewBag.NOM</strong><br>
                        @ViewBag.ADRESSE<br>
                        @ViewBag.TEL<br>
                        @ViewBag.FAX
                    </address>
                </div>

                <div class="col-sm-6 text-right">
                    <h4>Devis</h4>
                    <h4 class="text-navy">@ViewBag.Code</h4>
                    <span>To:</span>
                    <address>
                        <strong>SUNEVIT</strong><br>
                        Route El Aїn Km 1.5;<br>
                        Sadok Guermazi
                        <br>
                      Assoundous 1er étage - 3000 SFAX
                    </address>
                    <p>
                        <span><strong>Date d'impression:</strong>@ViewBag.DATE2</span><br />
                       <span><strong>Date de devis:</strong>@ViewBag.DATE</span>
                    </p>
                </div>
            </div>

            <div class="table-responsive m-t">
                <table class="table invoice-table">
                    <thead>
                        <tr>
                            <th>Item List</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Tax</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (dynamic item in Model)
                        {
                            <tr>
                                <td>
                                    <div><strong>@item.Libelle_Prd</strong></div>
                                    <small>@item.DESIGNATION_PRODUIT</small>
                                </td>
                                <td>@item.QUANTITE</td>
                                <td>@item.PRIX_UNITAIRE_HT</td>
                                <td>@item.TVA</td>
                                <td>@item.TOTALE_TTC</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div><!-- /table-responsive -->

            <table class="table invoice-total">
                <tbody>
                    <tr>
                        <td><strong>Sub Total :</strong></td>
                        <td>
                            @ViewBag.TTNET
                        </td>
                    </tr>
                    <tr>
                        <td><strong>TAX :</strong></td>
                        <td>@ViewBag.TTVA </td>
                    </tr>
                    <tr>
                        <td><strong>TOTAL :</strong></td>
                        <td> @ViewBag.TTTC</td>
                    </tr>
                </tbody>
            </table>
            @*<div class="well m-t">
                <strong>Comments</strong>
                It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less
            </div>*@
        </div>

    </div>

</body>

</html>

<script type="text/javascript">
    window.print();
</script>
