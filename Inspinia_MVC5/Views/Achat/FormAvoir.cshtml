                $("#totalTVA").val(NewTotalTva.toFixed(3));
                var NetHT = totalHT - ((totalHT * remise) / 100);
                NetHT = parseFloat(NetHT);
                $("#NetHT").val(NetHT);
                var TotalTTC = NetHT + NewTotalTva + timbre;
                $("#TotalTTC").val(TotalTTC.toFixed(3));
                $("#netAPaye").val(TotalTTC.toFixed(3));
            }
        });
