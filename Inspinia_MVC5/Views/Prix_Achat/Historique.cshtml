@model IEnumerable<Inspinia_MVC5.Models.Historique_Prix_Achat>

@{
    ViewBag.Title = "Historique";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Historique</h5>
                        <div class="ibox-tools">

                        </div>
                    </div>
                    <div class="ibox-content" style="overflow:auto" >
                        <table border="1">
                            <thead >
                                <tr>
                                    <th style="width:400px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Designation)
                                    </th>
                                    <th style="width:400px; height:100px;">
                                        @Html.DisplayNameFor(model => model.PU_HT_Sans_Remise)
                                    </th>
                                    <th style="width:600px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Remise)
                                    </th>
                                    <th style="width:600px; height:100px;">
                                        @Html.DisplayNameFor(model => model.PU_HT_Avec_Remise)
                                    </th>
                                    <th style="width:600px; height:100px;">
                                        @Html.DisplayNameFor(model => model.PU_TTC)
                                    </th>
                                    <th style="width:400px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Date_offre_de_prix)
                                    </th>
                                    <th style="width:400px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Duree_de_validite)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.N_Offre_de_Prix)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Categorie)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Devise)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Fournisseur)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Marque)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Sous_Categorie)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Valeur_TVA)
                                    </th>
                                    <th style="width:300px; height:100px;">
                                        @Html.DisplayNameFor(model => model.Unite)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)



                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Designation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PU_HT_Sans_Remise)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Remise)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PU_HT_Avec_Remise)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PU_TTC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date_offre_de_prix)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Duree_de_validite)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.N_Offre_de_Prix)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Categorie)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Devise)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fournisseur)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Marque)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sous_Categorie)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Valeur_TVA)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Unite)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>

        </div>
    </div>



