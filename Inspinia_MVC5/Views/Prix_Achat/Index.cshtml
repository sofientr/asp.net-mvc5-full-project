@model IEnumerable<Inspinia_MVC5.Models.Devis>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Devis</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Devis</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.date_devis)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.designation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tiers.NOM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Societes.NOM)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date_devis)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tiers.NOM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Societes.NOM)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Numero_devis }, new { @class = "btn btn-primary btn-sm" })
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Numero_devis }, new { @class = "btn btn-white btn-sm" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Numero_devis }, new { @class = "btn btn-white btn-sm" })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



