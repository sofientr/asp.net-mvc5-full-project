@model IEnumerable<Inspinia_MVC5.Models.Commande>

@{
    ViewBag.Title = "Index";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Commande</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Liste des Commande</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date_Passasation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prix_Totale)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Decaissement.DecaissID)
                                </th>


                                <th>
                                    @Html.DisplayNameFor(model => model.FRS.NOM)
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date_Passasation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Prix_Totale)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Decaissement.DecaissID)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.FRS.NOM)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.CmdID }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Edit", "Edit", new { id = item.CmdID }, new { @class = "btn btn-white btn-sm" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.CmdID }, new { @class = "btn btn-white btn-sm" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv', title: 'liste des commandes' },
                    { extend: 'excel', title: 'liste des commandes' },
                    { extend: 'pdf', title: 'liste des commandes' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });



        });

    </script>
}









